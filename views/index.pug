extends layout

block content
   h1 Quadria's Library Books
   p
     a.button(href='/books/new') Create New Book
   
   form(method='action', action='/books/search')
   input(type='submit', value='Home', id='submitHome')
  
   table
     thead
       tr
         th Title
         th Author
         th Genre
         th Year
     tbody
     each book, index in books
        tr
          td
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year