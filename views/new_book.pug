//- Displays the new book form
extends layout.pug

block content
 h1 New Book
 form(action="/books/new", method="post")
  if errors
   h2.error Opps!
   ul.error
    each error in errors
     li #{error.message}
    
  p
   label(for='title') Title
   input(name='title', type='text', value=book.title)
  p
   label(for='author') Author
   input(name='author', type='text', value=book.author)
  p
   label(for='genre') Genre
   input(name='genre', type='text', value=book.genre)
  p
   label(for='year') Year
   input(name='year', type='text', value=book.year)
  p
   input(type='submit', value='Create New Book')
  p
   a.button(href='/books') Cancel